<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.kira.loginregister.StudentAreaActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="30sp"
         />

    <Spinner
        android:id="@+id/spClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:addStatesFromChildren="false"
        app:layout_constraintStart_toStartOf="@+id/bSign"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the class you want to sign in:"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_above="@id/spClass" />

    <Button
        android:id="@+id/bSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in!"
        android:layout_below="@id/spClass"
        android:layout_centerHorizontal="true"/>

